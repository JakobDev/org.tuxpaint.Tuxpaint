From: Cosimo Cecchi <cosimoc@gnome.org>
Date: Sun, 19 Feb 2017 11:56:58 -0800
Subject: [PATCH] Run fullscreen by default

---
 src/tuxpaint.desktop    | 2 +-
 src/tuxpaint.desktop.in | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/tuxpaint.desktop b/src/tuxpaint.desktop
index 883c9c2..643cf19 100644
--- a/src/tuxpaint.desktop
+++ b/src/tuxpaint.desktop
@@ -110,7 +110,7 @@ Name[zh_CN]=Tux Paint
 Name[zh_TW]=企鵝小畫家
 Name[zu]=i-Tux Paint
 Type=Application
-Exec=tuxpaint
+Exec=tuxpaint --fullscreen yes --native
 Icon=tuxpaint
 Terminal=false
 Categories=Education;Art;
diff --git a/src/tuxpaint.desktop.in b/src/tuxpaint.desktop.in
index ad5ffd8..ecbfb47 100644
--- a/src/tuxpaint.desktop.in
+++ b/src/tuxpaint.desktop.in
@@ -1,7 +1,7 @@
 [Desktop Entry]
 _Name=Tux Paint
 Type=Application
-Exec=tuxpaint
+Exec=tuxpaint --fullscreen yes --native
 Icon=tuxpaint
 Terminal=false
 Categories=Education;Art;
