{
    "app-id": "org.tuxpaint.Tuxpaint",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--persist=.tuxpaint"
    ],
    "command": "tuxpaint",
    "rename-desktop-file": "tuxpaint.desktop",
    "rename-icon": "tuxpaint",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/smpeg/smpeg-0.4.5.json",
        "shared-modules/SDL/SDL_mixer-1.2.12.json",
        "shared-modules/SDL/SDL_ttf-2.0.11.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        "shared-modules/SDL/SDL_pango-0.1.2.json",
        {
            "name": "fribidi",
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://fribidi.org/download/fribidi-0.19.7.tar.bz2",
                    "sha256": "08222a6212bbc2276a2d55c3bf370109ae4a35b689acbc66571ad2a670595a8e"
                }
            ]
        },
        {
            "name": "libpaper",
            "config-opts": ["--disable-static"],
            "cleanup": [
                "/bin",
                "/sbin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://http.debian.net/debian/pool/main/libp/libpaper/libpaper_1.1.24+nmu5.tar.gz",
                    "sha256": "e29deda4cd7350189c71af0925cbf4a4473f9841d1419a922e1e8ff1954db1f2"
                },
                {
                    "type": "script",
                    "commands": ["autoreconf -vfi"],
                    "dest-filename": "autogen.sh"
                }
            ]
        },
        {
            "name": "tuxpaint",
            "no-autogen": true,
            "no-parallel-make": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/tuxpaint/tuxpaint/0.9.22/tuxpaint-0.9.22.tar.gz",
                    "sha256": "8abd932f8e36fad795bba0290c094c9c221e424c4b9aa8c763b7fb3459cb2be3"
                },
                {
                    "type": "patch",
                    "path": "tuxpaint-bash-completion.patch"
                },
                {
                    "type": "patch",
                    "path": "tuxpaint-Set-flatpak-app-profile.patch"
                },
                {
                    "type": "patch",
                    "path": "tuxpaint-Install-desktop-file-and-icons.patch"
                },
                {
                    "type": "patch",
                    "path": "tuxpaint-Run-fullscreen.patch"
                },
                {
                    "type": "file",
                    "path": "org.tuxpaint.Tuxpaint.appdata.xml"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "cp org.tuxpaint.Tuxpaint.appdata.xml /app/share/appdata"
            ]
        },
        {
            "name": "tuxpaint-stamps",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/tuxpaint/tuxpaint-stamps/2014-08-23/tuxpaint-stamps-2014.08.23.tar.gz",
                    "sha256": "d8005d57b08f18b54df5a1baf86f09268278d1252de6b193119713f265e61466"
                }
            ],
            "build-commands": [
                "make PREFIX=/app install-all"
            ]
        }
    ]
}
